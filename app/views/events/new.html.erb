<%= form_for @event, :url => { :controller => 'events', :action => 'create' } do |f| %>

<!-- 當你按下按鈕 會送到 events controller 的create action -->

    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>

    <%= f.submit "Create" %>

<% end %>